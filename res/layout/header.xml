<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-50dp"
    android:gravity="bottom" >

    <LinearLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@drawable/header"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/StateText"
            style="@style/AutoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:paddingTop="3dp"
            android:text="@string/title"
            android:textSize="10dp" />

        <LinearLayout
            android:id="@+id/GridLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ReinforcementLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/MinSupply"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/min"
                    android:gravity="center" />

                <Button
                    android:id="@+id/RemoveSupply"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/minus"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/ReinforcementSupply"
                    style="@style/AutoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="1" />

                <Button
                    android:id="@+id/AddSupply"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/plus"
                    android:gravity="center" />

                <Button
                    android:id="@+id/MaxSupply"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/max"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/ValidView"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/valid"
                    android:gravity="center" />

                <Button
                    android:id="@+id/DoneView"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/end"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ColorView"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/lannister" />

</RelativeLayout>