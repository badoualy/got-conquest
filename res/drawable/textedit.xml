<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:centerColor="#CCafafaf" android:endColor="#CCd3D3D3" android:startColor="#CCa5a5a5" />

            <stroke android:width="1.5dp" android:color="#CCa5a5a5" />

            <corners android:radius="4dp" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="270" android:centerColor="#CCafafaf" android:endColor="#CCd3D3D3" android:startColor="#CCa5a5a5" />
            
            <corners android:radius="4dp" />
        </shape></item>
    <item android:state_enabled="true"><shape>
            <padding android:bottom="2dp" android:left="4dp" android:right="2dp" android:top="2dp" />
        </shape></item>

</selector>